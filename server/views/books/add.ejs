<%- include('../partials/header.ejs') %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>

             <!-- Details -->
            <form class="form" method="POST">
              <div class="form-group">
                       <label for="NameTextField">Book Title</label>
                       <input type="text" class="form-control" 
                       id="NameTextField"
                       placeholder="Enter the book name" 
                       name="Title"  required>
              </div>

              <div class="form-group">
                      <label for="DescriptionTextField">Description</label>
                      <textarea type="text" class="form-control" 
                       id="DescriptionTextField"
                       placeholder="Enter the book description"
                       name="Description"  required></textarea>
              </div>


              <div class="form-group">
                       <label for="PriceTextField">Price</label>
                       <input type="decimal" class="form-control" 
                       id="PriceTextField"
                       placeholder="Enter the book price" 
                       name="Price"  required>
              </div>

              <div class="form-group">
                      <label for="AuthorTextField">Author</label>
                      <input type="text" class="form-control" 
                       id="AuthorTextField"
                       placeholder="Enter the book's author" 
                       name="Author"  required>
              </div>

              <div class="form-group">
                       <label for="GenreTextField">Genre</label>
                       <input type="text" class="form-control"
                       id="GenreTextField"
                       placeholder="Enter the book genre"
                       name="Genre"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/books" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs') %>
