<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-11">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIX THE ADD BUTTON BELOW -->  
          <!-- ------------------------ -->
          <a href="/books/add" class="btn btn-primary" role="button">
          <i class="fa fa-plus"></i> Add a Book</a>
          <br>

          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr>
                  <th class="text-center col-2">Title</th>
                  <th class="text-center col-6">Description</th>
                  <th class="text-center col-1">Price</th>
                  <th class="text-center col-1"> Author</th>
                  <th class="text-center col-2">Genre</th>
                  <th class="text-center" colspan="2">Actions</th>
                  
                </tr>
                </thead>
                <tbody>
                <!--  Repeatable Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                
                      <tr class="d-flex">
                          <td class="text-center col-2"><%= books[count].Title %></td>
                          <td class="text-center col-6"><%= books[count].Description %></td>
                          <td class="text-center col-1"><%= books[count].Price %></td>
                          <td class="text-center col-1"><%= books[count].Author %></td>
                          <td class="text-center col-2"><%= books[count].Genre %></td>

              
                         <td class="text-center">
                           <!-- ------------------------ -->
                           <!-- ADD the EDIT BUTTON HERE -->
                           <a href="/books/edit/<%= books[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fa fa-pencil alt">Edit</i></a>
                           <!-- ------------------------ -->
                         </td>

                         <td class="text-center">
                           <!-- ------------------------ -->
                           <!-- ADD the DELETE BUTTON HERE -->
                           <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger btn-sm">
                                  <i class="fa fa-trash alt"></i> Delete</a>

                           <!-- ------------------------ -->
                          </td>
                       </tr>
                <% } %>

              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>


